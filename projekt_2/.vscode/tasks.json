{
		"version": "2.0.0",
		"tasks": 
		[
			{
				"type": "cppbuild",
				"label": "C/C++: g++.exe kompiluj aktywny plik",
				"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
				"args": [
					"-fdiagnostics-color=always",
					"-g",
					"${file}",
					"-o",
