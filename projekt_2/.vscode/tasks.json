					"-static",
					"-static-libstdc++"
				],
				"options": {
					"cwd": "${fileDirname}"
				},
				"problemMatcher": [
					"$gcc"
				],
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"detail": "kompilator: C:\\msys64\\mingw64\\bin\\g++.exe"
			},
			{
				"type": "cppbuild",
				"label": "C/C++: cpp.exe kompiluj aktywny plik",
				"command": "C:\\msys64\\mingw64\\bin\\cpp.exe",
				"args": [
					"-fdiagnostics-color=always",
					"-g",
					"${file}",
					"-o",
					"${fileDirname}\\${fileBasenameNoExtension}.exe"
				],
				"options": {
					"cwd": "${fileDirname}"
				},
				"problemMatcher": [
					"$gcc"
				],
				"group": "build",
